@model IEnumerable<Presentation.Models.CommentaryViewModel>
@inject UserManager<IdentityUser> _userManager

@{
    ViewData["Title"] = "Commentaries";

    string? userId = _userManager.GetUserId(User);

    var user = await _userManager.GetUserAsync(User);

    bool IsAllowedComment = false;

    if (user != null)
    {
        IsAllowedComment = await _userManager.IsEmailConfirmedAsync(user);
    }
}

<style>
    .preserve-format {
        white-space: pre-wrap;
    }

    .comment-container {
        background-color: #f8f9fa;
        border: 1px solid #e3e6ea;
        border-radius: 8px;
        padding: 15px;
        margin-bottom: 20px;
    }

    .comment-container:hover {
        background-color: #e9ecef;
        transition: background-color 0.3s ease;
    }

    .comment-username {
        font-weight: bold;
        font-size: 1.25rem;
    }

    .comment-time {
        font-size: 0.85rem;
        color: #6c757d;
    }

    .comment-text {
        font-size: 1rem;
        color: #343a40;
    }

    .btn-create {
        background-color: #007bff;
        color: white;
        padding: 10px 20px;
        border-radius: 5px;
        text-decoration: none;
    }

        .btn-create:hover {
            background-color: #0056b3;
            color: white;
        }
</style>

<h1>Index</h1>

<p>
    @if (IsAllowedComment)
    {
        @Html.ActionLink("Post a Comment", "New", "Commentary", new { bookId = ViewBag.BookId }, new { @class = "btn btn-primary" })
    }
</p>

@if (Model == null)
{
    <h2>No comments to this book</h2>
}
else
{
    <div class="container">
        @foreach (var item in Model) 
        {
            <div class="comment-container shadow-sm"> 
                <div class="row">
                    <div class="col-12">
                        <h3 class="comment-username">@item.Username</h3>
                        <h4 class="comment-time">@item.CreatedDate</h4>
                    </div>
                </div>

                <div class="row">
                    <div class="col-12">
                        <p class="comment-text preserve-format">
                            @item.Comment
                        </p>
                    </div>
                </div>

                @if (userId == item.PublisherId || User.IsInRole("Admin"))
                {
                    <div class="row">
                        <div class="col-12">
                            @Html.ActionLink("Delete Comment", "Delete", "Commentary", new { id = item.CommentId }, new { @class = "btn btn-danger" })
                        </div>
                    </div>
                }
            </div>
        }
    </div>
}
