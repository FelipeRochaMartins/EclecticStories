@using Microsoft.AspNetCore.Http
@using System.Collections.Generic

@model LoginViewModel
@inject SignInManager<IdentityUser> SignInManager

@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5 col-12 col-md-8 col-lg-6">
    <div class="card border-blue">
        <div class="card-body">
            <h2 class="card-title" style="color: #004aad;">Login</h2>
            <hr style="color: #004aad;">

            <section>
                <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="row mb-3">
                        <div class="col-10 mx-auto">
                            <div class="form-group mb-3">
                                <label asp-for="Email" class="control-label"></label>
                                <input asp-for="Email" class="form-control border-blue" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-2">
                                <label asp-for="Password" class="control-label"></label>
                                <input asp-for="Password" class="form-control border-blue" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <p>
                                <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" class="link-primary text-decoration-none">Register New User...</a>
                            </p>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-auto mx-auto">
                            <div class="form-group">
                                <button type="submit" class="btn btn-pri-blue w-100">Log in</button>
                            </div>
                        </div>
                    </div>
                    
                </form>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
